@model myapp.ViewModels.ApprovalIndexViewModel

@{
    ViewData["Title"] = "รายการรอการอนุมัติ";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.PendingRequests.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PendingRequests.First().RequesterName)</th>
                    <th>@Html.DisplayNameFor(model => model.PendingRequests.First().Department)</th>
                    <th>@Html.DisplayNameFor(model => model.PendingRequests.First().RequestType)</th>
                    <th>@Html.DisplayNameFor(model => model.PendingRequests.First().Urgency)</th>
                    <th>@Html.DisplayNameFor(model => model.PendingRequests.First().Status)</th>
                    <th>@Html.DisplayNameFor(model => model.PendingRequests.First().CreatedAt)</th>
                    <th>การดำเนินการ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PendingRequests)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.RequesterName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Department)</td>
                        <td>@Html.DisplayFor(modelItem => item.RequestType)</td>
                        <td>@Html.DisplayFor(modelItem => item.Urgency)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>@item.CreatedAt.ToLocalTime().ToString("g")</td>
                        <td>
                             <div class="d-flex flex-wrap align-items-center gap-2">
                                <a asp-controller="ITSupport" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">รายละเอียด</a>

                                <form asp-action="Approve" asp-route-id="@item.Id" method="post" class="d-inline-flex align-items-center gap-2">
                                     @if (Model.AssignableUsers.Any())
                                    {
                                        <select name="responsibleUserId" class="form-select form-select-sm" required>
                                            <option value="">-- มอบหมายงานให้ --</option>
                                            @foreach (var user in Model.AssignableUsers)
                                            {
                                                <option value="@user.Id">@user.FullName</option>
                                            }
                                        </select>
                                    }
                                    <button type="submit" class="btn btn-sm btn-success">อนุมัติ</button>
                                </form>

                                <form asp-action="Reject" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">ปฏิเสธ</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center">
        <p>ไม่มีรายการที่รอการอนุมัติในขณะนี้</p>
    </div>
}
