@model myapp.ViewModels.ApprovalIndexViewModel
@using myapp.Models

@{
    ViewData["Title"] = "อนุมัติรายการ";
}

<div class="container-fluid py-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h1 class="h3 mb-0">@ViewData["Title"] (@Model.SelectedStatus)</h1>
        </div>
        <div class="card-body">

            <div class="card-header mb-3">
                <form asp-action="Index" method="get" class="row g-3 align-items-center">
                    <div class="col-auto">
                        <label for="selectedStatus" class="col-form-label">สถานะ:</label>
                    </div>
                    <div class="col-md-4">
                        <select name="selectedStatus" asp-for="SelectedStatus" asp-items="Model.StatusOptions" class="form-select"></select>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">ค้นหา</button>
                    </div>
                </form>
            </div>

            @if (!Model.Requests.Any())
            {
                <div class="alert alert-info" role="alert">
                    ไม่พบรายการในสถานะ "@Model.SelectedStatus"
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle table-orange-theme">
                        <thead class="table-light">
                            <tr>
                                <th>รหัสคำขอ</th>
                                <th>ผู้แจ้ง</th>
                                <th>แผนก</th>
                                <th>หัวข้อ</th>
                                <th class="text-center">วันที่แจ้ง</th>
                                <th class="text-center">สถานะ</th>
                                @if (Model.SelectedStatus == SupportRequestStatus.Pending)
                                {
                                    <th class="text-center">ผู้อนุมัติปัจจุบัน</th>
                                    <th class="text-center">การดำเนินการ</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Requests)
                            {
                                string statusClass = "";
                                switch (item.Status)
                                {
                                    case SupportRequestStatus.Pending:
                                        statusClass = "bg-warning text-dark";
                                        break;
                                    case SupportRequestStatus.Approved:
                                        statusClass = "bg-success";
                                        break;
                                    case SupportRequestStatus.Rejected:
                                        statusClass = "bg-danger";
                                        break;
                                    case SupportRequestStatus.InProgress:
                                        statusClass = "bg-info text-dark";
                                        break;
                                    default:
                                        statusClass = "bg-secondary";
                                        break;
                                }

                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.RequesterName</td>
                                    <td>@item.Department</td>
                                    <td><a asp-controller="ITSupport" asp-action="Details" asp-route-id="@item.Id">@item.ProblemDescription</a></td>
                                    <td class="text-center">@item.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-center"><span class="badge @statusClass">@item.Status</span></td>
                                    
                                    @if (Model.SelectedStatus == SupportRequestStatus.Pending)
                                    {
                                        <td class="text-center">@(item.CurrentApprover?.User?.FirstName ?? "N/A")</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <form asp-action="Approve" asp-route-id="@item.Id" method="post" onsubmit="return confirm('คุณแน่ใจหรือไม่ว่าต้องการอนุมัติรายการนี้?');">
                                                    <button type="submit" class="btn btn-approve btn-sm me-1">
                                                        <i class="fas fa-check"></i> อนุมัติ
                                                    </button>
                                                </form>
                                                <form asp-action="Reject" asp-route-id="@item.Id" method="post" onsubmit="return confirm('คุณแน่ใจหรือไม่ว่าต้องการปฏิเสธรายการนี้?');">
                                                    <button type="submit" class="btn btn-reject btn-sm">
                                                        <i class="fas fa-times"></i> ปฏิเสธ
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}
