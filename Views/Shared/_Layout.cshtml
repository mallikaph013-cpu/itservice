
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <title>@ViewData["Title"] - ASI Service</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/fonts.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/myapp.styles.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ASI Service</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            @if (User.IsInRole("Admin") || User.IsInRole("ITSupport"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="News" asp-action="Index">News</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-orange" asp-area="" asp-controller="ITSupport" asp-action="Index">แจ้งซ่อม</a>
                            </li>
                            @if (User.HasClaim("CanApprove", "True"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Approval" asp-action="Index">อนุมัติรายการ</a>
                                </li>
                            }
                            @if (User.IsInRole("ITSupport"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="MyTasks" asp-action="Index">งานของฉัน</a>
                                </li>
                            }
                             @if (User.IsInRole("Admin") || User.IsInRole("ITSupport") || (User.FindFirst("IsDxStaff")?.Value == "True"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="ITSupport" asp-action="WorkQueue">รับงาน</a>
                                </li>
                            }
                            @if (User.IsInRole("Admin") || User.IsInRole("ITSupport") || User.FindFirst("IsDxStaff")?.Value == "True")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="reportDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        รายงาน
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="reportDropdown">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Report" asp-action="Index">สรุปการแจ้งซ่อม</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="SummaryReport" asp-action="Index">สรุปภาพรวม</a></li>
                                    </ul>
                                </li>
                            }
                            @if (User.IsInRole("Admin") || User.IsInRole("ITSupport"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        จัดการข้อมูล
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Departments" asp-action="Index">ข้อมูลฝ่าย/แผนก</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="Index">ข้อมูลผู้ใช้งาน</a></li>
                                        <li><a class="dropdown-item" asp-area="" asp-controller="ApprovalSequences" asp-action="Index">Approval Sequences</a></li>
                                        @* <li><a class="dropdown-item" asp-area="" asp-controller="UserMenu" asp-action="Index">กำหนดสิทธิ์</a></li> *@
                                    </ul>
                                </li>
                            }
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - ASI Service - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
