@model IEnumerable<myapp.Models.SupportRequest>

@{
    ViewData["Title"] = "งานของฉัน";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().RequesterName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().RequestType)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Urgency)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Status)</th>
                    <th>@Html.DisplayNameFor(model => model.First().UpdatedAt)</th>
                    <th>การดำเนินการ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.RequesterName)</td>
                        <td>@Html.DisplayFor(modelItem => item.RequestType)</td>
                        <td>@Html.DisplayFor(modelItem => item.Urgency)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>@item.UpdatedAt.ToLocalTime().ToString("g")</td>
                        <td>
                            <div class="d-flex flex-wrap align-items-center gap-2">
                                <a asp-controller="ITSupport" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">รายละเอียด</a>

                                @if (item.Status == myapp.Models.SupportRequestStatus.Approved)
                                {
                                    <form asp-controller="MyTasks" asp-action="UpdateStatus" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <input type="hidden" name="status" value="@nameof(myapp.Models.SupportRequestStatus.InProgress)" />
                                        <button type="submit" class="btn btn-sm btn-primary">เริ่มดำเนินการ</button>
                                    </form>
                                }

                                @if (item.Status == myapp.Models.SupportRequestStatus.InProgress)
                                {
                                    <form asp-controller="MyTasks" asp-action="UpdateStatus" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <input type="hidden" name="status" value="@nameof(myapp.Models.SupportRequestStatus.Done)" />
                                        <button type="submit" class="btn btn-sm btn-success">ดำเนินการเรียบร้อย</button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center">
        <p>คุณไม่มีงานที่ได้รับมอบหมายในขณะนี้</p>
    </div>
}
