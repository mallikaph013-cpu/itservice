@model IEnumerable<myapp.Models.SupportRequest>
@using myapp.Models

@{
    ViewData["Title"] = "งานของฉัน";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().RequesterName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().RequestType)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Urgency)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Status)</th>
                    <th>@Html.DisplayNameFor(model => model.First().UpdatedAt)</th>
                    <th style="width: 300px;">การดำเนินการ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.RequesterName)</td>
                        <td>@Html.DisplayFor(modelItem => item.RequestType)</td>
                        <td>@Html.DisplayFor(modelItem => item.Urgency)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>@item.UpdatedAt.ToLocalTime().ToString("g")</td>
                        <td>
                            <div class="d-flex flex-wrap align-items-center gap-2">
                                <a asp-controller="ITSupport" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">รายละเอียด</a>

                                @if (item.Status == SupportRequestStatus.Approved || item.Status == SupportRequestStatus.InProgress)
                                {
                                    <form asp-controller="MyTasks" asp-action="UpdateStatus" method="post" class="d-flex align-items-center gap-2">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <select name="status" class="form-select form-select-sm">
                                            <option value="@nameof(SupportRequestStatus.Approved)" selected="@(item.Status == SupportRequestStatus.Approved)">ยังไม่รับงาน</option>
                                            <option value="@nameof(SupportRequestStatus.InProgress)" selected="@(item.Status == SupportRequestStatus.InProgress)">อยู่ระหว่างดำเนินงาน</option>
                                            <option value="@nameof(SupportRequestStatus.Done)">ดำเนินงานเสร็จสิ้น</option>
                                        </select>
                                        <button type="submit" class="btn btn-sm btn-primary">อัปเดต</button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center mt-4">
        <p>คุณไม่มีงานที่ได้รับมอบหมายในขณะนี้</p>
    </div>
}
