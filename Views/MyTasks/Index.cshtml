@model IEnumerable<myapp.Models.SupportRequest>
@using myapp.Models

@functions {
    public static (string, string) GetStatusInfo(SupportRequestStatus status)
    {
        return status switch
        {
            SupportRequestStatus.Pending => ("bg-secondary", "รอดำเนินการ"),
            SupportRequestStatus.Approved => ("bg-warning text-dark", "ยังไม่รับงาน"),
            SupportRequestStatus.InProgress => ("bg-info text-dark", "กำลังดำเนินการ"),
            SupportRequestStatus.Done => ("bg-success", "เสร็จสิ้น"),
            SupportRequestStatus.Rejected => ("bg-danger", "ถูกปฏิเสธ"),
            _ => ("bg-light text-dark", status.ToString())
        };
    }

    public static (string, string) GetUrgencyInfo(UrgencyLevel urgency)
    {
        return urgency switch
        {
            UrgencyLevel.Low => ("badge-light-primary", "ต่ำ"),
            UrgencyLevel.Medium => ("badge-light-warning", "ปานกลาง"),
            UrgencyLevel.High => ("badge-light-danger", "สูง"),
            _ => ("badge-light-secondary", "ไม่ระบุ")
        };
    }
}

@{
    ViewData["Title"] = "งานของฉัน";
}

<div class="container py-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 g-4">
            @foreach (var item in Model)
            {
                var (statusClass, statusText) = GetStatusInfo(item.Status);
                var (urgencyClass, urgencyText) = GetUrgencyInfo(item.Urgency);

                <div class="col">
                    <div class="card h-100 shadow-sm task-card">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">@Html.DisplayFor(modelItem => item.RequestType)</h5>
                            <span class="badge @urgencyClass">@urgencyText</span>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <small class="text-muted">ผู้แจ้ง:</small>
                                <strong>@Html.DisplayFor(modelItem => item.RequesterName)</strong>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">อัปเดตล่าสุด:</small>
                                @item.UpdatedAt.ToLocalTime().ToString("g")
                            </p>
                            <p class="card-text">
                                <small class="text-muted">สถานะ:</small>
                                <span class="badge @statusClass">@statusText</span>
                            </p>
                        </div>
                        <div class="card-footer bg-light">
                             <div class="d-flex flex-wrap align-items-center justify-content-between gap-2">
                                <a asp-controller="ITSupport" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-info-circle-fill me-1"></i> รายละเอียด
                                </a>

                                @if (item.Status == SupportRequestStatus.Approved || item.Status == SupportRequestStatus.InProgress)
                                {
                                    <form asp-controller="MyTasks" asp-action="UpdateStatus" method="post" class="d-flex align-items-center gap-2">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <select name="status" class="form-select form-select-sm" style="width: auto;">
                                            @if(item.Status == SupportRequestStatus.Approved) {
                                                <option value="@nameof(SupportRequestStatus.Approved)" selected>ยังไม่รับงาน</option>
                                            }
                                            <option value="@nameof(SupportRequestStatus.InProgress)" selected="@(item.Status == SupportRequestStatus.InProgress)">อยู่ระหว่างดำเนินงาน</option>
                                            <option value="@nameof(SupportRequestStatus.Done)">ดำเนินงานเสร็จสิ้น</option>
                                        </select>
                                        <button type="submit" class="btn btn-sm btn-primary">อัปเดต</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center mt-5 p-5 bg-light rounded">
            <i class="bi bi-check2-circle fs-1 text-success"></i>
            <h3 class="mt-3">ยอดเยี่ยม!</h3>
            <p class="lead text-muted">คุณไม่มีงานค้างอยู่ในขณะนี้</p>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        .task-card {
            border: none;
            border-radius: 0.75rem;
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

        .task-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

        .card-header {
            border-bottom: 1px solid #f0f0f0;
        }

        .card-title {
            font-weight: 600;
        }
        
        .badge-light-primary {
            background-color: rgba(0, 123, 255, 0.1);
            color: #007bff;
        }

        .badge-light-warning {
            background-color: rgba(255, 193, 7, 0.1);
            color: #ffc107;
        }

        .badge-light-danger {
            background-color: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }
        
        .badge-light-secondary {
            background-color: rgba(108, 117, 125, 0.1);
            color: #6c757d;
        }

        .card-footer {
            border-top: 1px solid #f0f0f0;
        }
        
        body {
            background-color: #f8f9fa;
        }
    </style>
}
