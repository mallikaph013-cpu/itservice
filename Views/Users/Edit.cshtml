@model myapp.Models.User

@{
    ViewData["Title"] = "แก้ไขข้อมูลผู้ใช้";
}

<h1>@ViewData["Title"]</h1>

<div class="card shadow-lg">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="mb-3">
                <label asp-for="EmployeeId" class="form-label"></label>
                <input asp-for="EmployeeId" class="form-control" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <!-- Placeholder Input -->
                <input type="text" id="PasswordPlaceholder" class="form-control" value="********" readonly style="cursor: pointer;" />
                <!-- Real Password Input (hidden) -->
                <input asp-for="Password" class="form-control" style="display: none;" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Department" class="form-label"></label>
                <select asp-for="Department" class="form-control" asp-items="ViewBag.Departments"><option value="">-- Select Department --</option></select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Section" class="form-label"></label>
                <select asp-for="Section" class="form-control" asp-items="ViewBag.Sections"><option value="">-- Select Section --</option></select>
                <span asp-validation-for="Section" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Role" class="form-label"></label>
                <select asp-for="Role" class="form-control">
                    <option value="User">User</option>
                    <option value="ITSupport">ITSupport</option>
                    <option value="Admin">Admin</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsITStaff" />
                <label class="form-check-label" asp-for="IsITStaff">
                    เป็นพนักงานฝ่าย IT (ตั้งค่าเริ่มต้น)
                </label>
            </div>
            
            <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsDxStaff" />
                <label class="form-check-label" asp-for="IsDxStaff">
                    ระบุว่า DX Approve
                </label>
            </div>

            <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" asp-for="CanApprove" />
                <label class="form-check-label" asp-for="CanApprove">
                    สามารถอนุมัติได้
                </label>
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                 <button type="submit" class="btn btn-primary">บันทึก</button>
                 <a asp-action="Index" class="btn btn-secondary">กลับไปที่รายการ</a>
            </div>
        </form>
    </div>
</div>

<style>
    .card {
        border-radius: 1rem;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // --- Robust Password Field Logic ---
            const placeholder = document.getElementById('PasswordPlaceholder');
            const realPassword = document.getElementById('Password');

            if (placeholder && realPassword) {
                // When the placeholder is clicked, switch to the real password field
                placeholder.addEventListener('click', function () {
                    placeholder.style.display = 'none';
                    realPassword.style.display = 'block';
                    realPassword.focus();
                });

                // When the user leaves the real password field...
                realPassword.addEventListener('blur', function () {
                    // ...if it's empty, switch back to the placeholder
                    if (realPassword.value === '') {
                        realPassword.style.display = 'none';
                        placeholder.style.display = 'block';
                    }
                });
            }


            // --- IT Staff Checkbox Logic (already working correctly) ---
            const itStaffCheckbox = document.getElementById('IsITStaff');
            const departmentSelect = document.getElementById('Department');
            const roleSelect = document.getElementById('Role');

            function syncUI() {
                const isITSupport = departmentSelect.value === 'IT' && roleSelect.value === 'ITSupport';
                if (itStaffCheckbox.checked !== isITSupport) {
                    itStaffCheckbox.checked = isITSupport;
                }
            }

            function setITDefaults() {
                 if (itStaffCheckbox.checked) {
                    departmentSelect.value = 'IT';
                    roleSelect.value = 'ITSupport';
                } else {
                    if (roleSelect.value === 'ITSupport') {
                       roleSelect.value = 'User'; 
                    }
                }
            }
            
            if (itStaffCheckbox && departmentSelect && roleSelect) {
                syncUI();
                itStaffCheckbox.addEventListener('change', setITDefaults);
                departmentSelect.addEventListener('change', syncUI);
                roleSelect.addEventListener('change', syncUI);
            }        
        });
    </script>
}
