@model IEnumerable<myapp.Models.User>

@{    ViewData["Title"] = "จัดการผู้ใช้";
}

<h1>จัดการผู้ใช้</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">เพิ่มผู้ใช้ใหม่</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">แก้ไข</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">ลบ</a>
            </td>
        </tr>
}
    </tbody>
</table>
