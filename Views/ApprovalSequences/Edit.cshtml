@model myapp.Models.ApprovalSequence
@using System.Text.Json;

@{
    ViewData["Title"] = "Edit Approval Sequence";
    var usersSelectList = (ViewBag.Users as IEnumerable<SelectListItem>) ?? new List<SelectListItem>();
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Sequence Details
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    <input type="hidden" asp-for="CreatedBy" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Department" class="form-label"></label>
                            <select asp-for="Department" class="form-select" asp-items="ViewBag.Departments"></select>
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="Active" selected="@Model.Status == "Active"">Active</option>
                                <option value="Inactive" selected="@Model.Status == "Inactive"">Inactive</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <h5>Approvers</h5>
                    <div id="approvers-container">
                        @foreach (var approver in Model.Approvers.OrderBy(a => a.Order))
                        {
                            <div class="row approver-row mb-2">
                                <div class="col-md-6">
                                     <select name="approverIds" class="form-select">
                                        <option value="">-- Select User --</option>
                                        @foreach(var user in usersSelectList)
                                        {
                                            <option value="@user.Value" selected="@(approver.UserId.ToString() == user.Value)">@user.Text</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <input type="number" name="approverOrders" class="form-control" value="@approver.Order" placeholder="Order" min="1">
                                </div>
                                <div class="col-md-2">
                                    <button type="button" class="btn btn-danger remove-approver">Remove</button>
                                </div>
                            </div>
                        }
                    </div>
                    <button type="button" id="add-approver" class="btn btn-secondary mt-2">Add Approver</button>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const approverContainer = document.getElementById('approvers-container');
            const users = @Html.Raw(Json.Serialize(usersSelectList));

            document.getElementById('add-approver').addEventListener('click', function () {
                const newRow = document.createElement('div');
                newRow.className = 'row approver-row mb-2';

                const userSelect = document.createElement('select');
                userSelect.name = 'approverIds';
                userSelect.className = 'form-select';
                userSelect.innerHTML = '<option value="">-- Select User --</option>' + 
                                     users.map(user => `<option value="${user.value}">${user.text}</option>`).join('');

                newRow.innerHTML = `
                    <div class="col-md-6"></div>
                    <div class="col-md-4">
                        <input type="number" name="approverOrders" class="form-control" placeholder="Order" min="1">
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-danger remove-approver">Remove</button>
                    </div>
                `;
                newRow.querySelector('.col-md-6').appendChild(userSelect);
                approverContainer.appendChild(newRow);
            });

            approverContainer.addEventListener('click', function (e) {
                if (e.target && e.target.classList.contains('remove-approver')) {
                    e.target.closest('.approver-row').remove();
                }
            });
        });
    </script>
}
