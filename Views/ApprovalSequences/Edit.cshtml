@model myapp.Models.ApprovalSequence

@{
    ViewData["Title"] = "Edit Approval Sequence";
    var selectedApprovers = ViewData["SelectedApprovers"] as List<dynamic> ?? new List<dynamic>();
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Sequence Details
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    <input type="hidden" asp-for="CreatedBy" />

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Department" class="form-label"></label>
                            <select id="Department" asp-for="Department" class="form-select" asp-items="ViewBag.Departments">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Section" class="form-label"></label>
                            <select id="Section" asp-for="Section" class="form-select" asp-items="ViewBag.Sections">
                                <option value="">-- Select Section --</option>
                            </select>
                            <span asp-validation-for="Section" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select">
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <h5>Approvers</h5>
                    <div id="approvers-container">
                        <!-- Dynamic approver rows will be injected here by JavaScript -->
                    </div>
                    <button type="button" id="add-approver" class="btn btn-secondary mt-2">Add Approver</button>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const departmentSelect = document.getElementById('Department');
            const sectionSelect = document.getElementById('Section');

            departmentSelect.addEventListener('change', function () {
                const departmentName = this.value;
                sectionSelect.innerHTML = '<option value="">Loading...</option>';

                if (!departmentName) {
                    sectionSelect.innerHTML = '<option value="">-- Select Section --</option>';
                    return;
                }

                fetch(`/ApprovalSequences/GetSections?department=${departmentName}`)
                    .then(response => response.json())
                    .then(data => {
                        sectionSelect.innerHTML = '<option value="">-- Select Section --</option>';
                        data.forEach(section => {
                            sectionSelect.innerHTML += `<option value="${section.name}">${section.name}</option>`;
                        });
                    })
                    .catch(error => {
                        console.error('Error fetching sections:', error);
                        sectionSelect.innerHTML = '<option value="">Error loading</option>';
                    });
            });

            // --- Approver Script ---
            const approverContainer = document.getElementById('approvers-container');
            const users = @Html.Raw(Json.Serialize(ViewBag.Users as IEnumerable<SelectListItem> ?? new List<SelectListItem>()));
            const selectedApprovers = @Html.Raw(Json.Serialize(selectedApprovers));
            const initialApprovers = @Html.Raw(Json.Serialize(Model.Approvers.OrderBy(a => a.Order).Select(a => new { userId = a.UserId, order = a.Order })));

            function addApproverRow(userId = '', order = '') {
                const newRow = document.createElement('div');
                newRow.className = 'row approver-row mb-2';

                const userSelect = document.createElement('select');
                userSelect.name = 'approverIds';
                userSelect.className = 'form-select';
                userSelect.innerHTML = '<option value="">-- Select User --</option>' + 
                                     users.map(user => `<option value="${user.value}" ${user.value == userId ? 'selected' : ''}>${user.text}</option>`).join('');

                newRow.innerHTML = `
                    <div class="col-md-6"></div>
                    <div class="col-md-4">
                        <input type="number" name="approverOrders" class="form-control" placeholder="Order" min="1" value="${order}">
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-danger remove-approver">Remove</button>
                    </div>
                `;
                newRow.querySelector('.col-md-6').appendChild(userSelect);
                approverContainer.appendChild(newRow);
            }

            const approversToRender = (selectedApprovers && selectedApprovers.length > 0) ? selectedApprovers : initialApprovers;

            if (approversToRender && approversToRender.length > 0) {
                approversToRender.forEach(function(approver) {
                    addApproverRow(approver.userId, approver.order);
                });
            }

            document.getElementById('add-approver').addEventListener('click', function () {
                addApproverRow();
            });

            approverContainer.addEventListener('click', function (e) {
                if (e.target && e.target.classList.contains('remove-approver')) {
                    e.target.closest('.approver-row').remove();
                }
            });
        });
    </script>
}
