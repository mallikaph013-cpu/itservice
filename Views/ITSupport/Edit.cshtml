@model myapp.Models.SupportRequest

@{
    var isReadOnly = (ViewData["IsReadOnly"] as bool?) ?? false;
    ViewData["Title"] = isReadOnly ? "รายละเอียดรายการแจ้งซ่อม" : "แก้ไขรายการแจ้งซ่อม";
}

<div class="container my-5">
    <div class="card shadow-lg border-light-subtle">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">@ViewData["Title"] #@Model.DocumentNo</h4>
        </div>
        <div class="card-body p-4">
            <form method="post" asp-action="Edit" enctype="multipart/form-data">
                <fieldset disabled="@isReadOnly">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    <input type="hidden" asp-for="CreatedBy" />
                    <input type="hidden" asp-for="Status" />
                    <input type="hidden" asp-for="CurrentApproverId" />

                    <h5 class="text-primary-emphasis mb-3">ข้อมูลผู้แจ้ง</h5>
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <label asp-for="EmployeeId" class="form-label fw-semibold"></label>
                            <input asp-for="EmployeeId" class="form-control" readonly="@isReadOnly" />
                            <span asp-validation-for="EmployeeId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="RequesterName" class="form-label fw-semibold"></label>
                            <input asp-for="RequesterName" class="form-control" readonly="@isReadOnly" />
                            <span asp-validation-for="RequesterName" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Department" class="form-label fw-semibold"></label>
                            <input asp-for="Department" class="form-control" readonly="@isReadOnly" />
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                    </div>

                    <hr class="my-4">

                    <h5 class="text-primary-emphasis mb-3">รายละเอียดการแจ้งซ่อม</h5>
                    <div class="mb-3">
                        <label asp-for="RequestType" class="form-label fw-semibold"></label>
                        <select id="RequestType" asp-for="RequestType" class="form-select" asp-items="Html.GetEnumSelectList<myapp.Models.RequestType>()">
                            <option value="">เลือกประเภทการแจ้งซ่อม</option>
                        </select>
                        <span asp-validation-for="RequestType" class="text-danger"></span>
                    </div>

                    <div id="program-selection" class="mb-3" style="display:none;">
                        <label asp-for="Program" class="form-label fw-semibold"></label>
                        <select id="Program" asp-for="Program" class="form-select" asp-items="Html.GetEnumSelectList<myapp.Models.ProgramName>()">
                            <option value="">เลือกโปรแกรม</option>
                        </select>
                        <span asp-validation-for="Program" class="text-danger"></span>
                    </div>

                    <div id="sap-problem-selection" class="mb-3" style="display:none;">
                        <label asp-for="SAPProblem" class="form-label fw-semibold"></label>
                        <select id="SAPProblem" asp-for="SAPProblem" class="form-select" asp-items="Html.GetEnumSelectList<myapp.Models.SAPProblemType>()">
                            <option value="">เลือกประเภทปัญหา SAP</option>
                        </select>
                        <span asp-validation-for="SAPProblem" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ProblemDescription" class="form-label fw-semibold"></label>
                        <textarea asp-for="ProblemDescription" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="ProblemDescription" class="text-danger"></span>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">ไฟล์แนบ</label>
                            @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                            {
                                <div>
                                    <a href="@Url.Content(Model.AttachmentPath)" target="_blank" class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-paperclip me-2"></i> ดูไฟล์แนบ
                                    </a>
                                </div>
                            }
                            else
                            {
                                <p class="form-control-static text-muted">ไม่มีไฟล์แนบ</p>
                            }
                             @if (!isReadOnly)
                            {
                                <label class="form-label mt-2">อัปโหลดไฟล์ใหม่ (ถ้ามี)</label>
                                <input type="file" name="attachmentFile" class="form-control" />
                            }
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Urgency" class="form-label fw-semibold"></label>
                            <select asp-for="Urgency" class="form-select" asp-items="Html.GetEnumSelectList<myapp.Models.UrgencyLevel>()">
                                <option value="">เลือกระดับความเร่งด่วน</option>
                            </select>
                            <span asp-validation-for="Urgency" class="text-danger"></span>
                        </div>
                    </div>
                </fieldset>

                <div class="mt-4 d-flex justify-content-end">
                    @if (!isReadOnly)
                    {
                        <button type="submit" class="btn btn-primary btn-lg me-2">บันทึกการแก้ไข</button>
                    }
                    @if (isReadOnly)
                    {
                         <a asp-controller="Approval" asp-action="Index" class="btn btn-secondary btn-lg">กลับหน้าอนุมัติ</a>
                    }
                    else
                    {
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">ยกเลิก</a>
                    }
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const requestTypeSelect = document.getElementById('RequestType');
            const programSelect = document.getElementById('Program');
            const sapProblemSelect = document.getElementById('SAPProblem');
            const programSelectionDiv = document.getElementById('program-selection');
            const sapProblemSelectionDiv = document.getElementById('sap-problem-selection');
            
            function toggleSections() {
                const selectedRequestType = requestTypeSelect.options[requestTypeSelect.selectedIndex].text.trim();
                const selectedProgram = programSelect.options[programSelect.selectedIndex].text.trim();

                programSelectionDiv.style.display = 'none';
                sapProblemSelectionDiv.style.display = 'none';

                if (selectedRequestType === 'Software') {
                    programSelectionDiv.style.display = 'block';
                    if (selectedProgram === 'SAP') {
                        sapProblemSelectionDiv.style.display = 'block';
                    }
                }
            }

            requestTypeSelect.addEventListener('change', toggleSections);
            programSelect.addEventListener('change', toggleSections);

            toggleSections();
        });
    </script>
}