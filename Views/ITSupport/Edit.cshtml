@model myapp.Models.SupportRequest

@{
    ViewData["Title"] = "แก้ไขรายการแจ้งซ่อม";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EmployeeId" />

            @if (Model.Status == myapp.Models.SupportRequestStatus.RevisionNeeded && !string.IsNullOrEmpty(Model.RevisionReason))
            {
                <div class="alert alert-warning mb-3" role="alert">
                    <h5 class="alert-heading">เหตุผลที่ส่งกลับมาแก้ไข:</h5>
                    <p class="mb-0">@Model.RevisionReason</p>
                </div>
            }

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="RequesterName" class="control-label"></label>
                        <input asp-for="RequesterName" class="form-control" />
                        <span asp-validation-for="RequesterName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Department" class="control-label"></label>
                        <input asp-for="Department" class="form-control" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label asp-for="RequestType" class="control-label"></label>
                <select asp-for="RequestType" class="form-control" asp-items="Html.GetEnumSelectList<myapp.Models.RequestType>()"></select>
                <span asp-validation-for="RequestType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProblemDescription" class="control-label"></label>
                <textarea asp-for="ProblemDescription" class="form-control" rows="3"></textarea>
                <span asp-validation-for="ProblemDescription" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="Urgency" class="control-label"></label>
                <select asp-for="Urgency" class="form-control" asp-items="Html.GetEnumSelectList<myapp.Models.UrgencyLevel>()"></select>
                <span asp-validation-for="Urgency" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="attachmentFile" class="control-label">ไฟล์แนบ (ถ้ามี)</label>
                <input type="file" id="attachmentFile" name="attachmentFile" class="form-control" />
                 @if (!string.IsNullOrEmpty(Model.AttachmentPath))
                {
                    <div class="mt-2">
                        <a href="@Model.AttachmentPath" target="_blank">ดูไฟล์แนบปัจจุบัน</a>
                    </div>
                }
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="บันทึกการแก้ไขและส่งอนุมัติอีกครั้ง" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">ยกเลิก</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
