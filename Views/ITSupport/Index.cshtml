@model IEnumerable<myapp.Models.SupportRequest>
@using myapp.Models

@{
    ViewData["Title"] = "รายการแจ้งซ่อม";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">สร้างรายการแจ้งซ่อมใหม่</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.RequesterName)</th>
                <th>@Html.DisplayNameFor(model => model.Department)</th>
                <th>@Html.DisplayNameFor(model => model.RequestType)</th>
                <th>@Html.DisplayNameFor(model => model.Urgency)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>@Html.DisplayNameFor(model => model.CurrentApprover)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                <th style="width: 200px;"></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.RequesterName)</td>
                <td>@Html.DisplayFor(modelItem => item.Department)</td>
                <td>@Html.DisplayFor(modelItem => item.RequestType)</td>
                <td>@Html.DisplayFor(modelItem => item.Urgency)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@(item.CurrentApprover?.User?.FullName ?? "-")</td>
                <td>@item.CreatedAt.ToLocalTime().ToString("g")</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">รายละเอียด</a>
                        @if (item.Status == SupportRequestStatus.Pending)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">แก้ไข</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">ลบ</a>
                        }
                    </div>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
