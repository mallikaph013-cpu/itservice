@model IEnumerable<myapp.Models.SupportRequest>
@using myapp.Models

@{
    ViewData["Title"] = "รายการแจ้งซ่อม";
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        .card-header-flex {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }
        .search-form .input-group {
            max-width: 400px;
        }
        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.04);
        }
    </style>
}

<div class="card shadow-sm border-light">
    <div class="card-header bg-white py-3 card-header-flex">
        <h1 class="mb-0 h4 text-orange">@ViewData["Title"]</h1>
        <form asp-action="Index" method="get" class="search-form">
            <div class="input-group">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="ค้นหา..." />
                <button type="submit" class="btn btn-outline-primary">
                    <i class="fas fa-search"></i>
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary" title="Clear Search">
                    <i class="fas fa-times"></i>
                </a>
            </div>
        </form>
    </div>

    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="text-end mb-3">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> สร้างรายการใหม่
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="py-3">@Html.DisplayNameFor(model => model.RequesterName)</th>
                        <th class="py-3">@Html.DisplayNameFor(model => model.Department)</th>
                        <th class="py-3">@Html.DisplayNameFor(model => model.RequestType)</th>
                        <th class="py-3">@Html.DisplayNameFor(model => model.Urgency)</th>
                        <th class="py-3">@Html.DisplayNameFor(model => model.Status)</th>
                        <th class="py-3">ผู้อนุมัติ</th>
                        <th class="py-3">@Html.DisplayNameFor(model => model.CreatedAt)</th>
                        <th class="py-3 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-5">
                                <h4>ไม่พบข้อมูล</h4>
                                <p>ยังไม่มีรายการแจ้งซ่อมในระบบ</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            var statusClass = "secondary";
                            var statusIcon = "fa-circle-notch";
                            switch (item.Status)
                            {
                                case SupportRequestStatus.Pending:
                                    statusClass = "warning text-dark"; statusIcon = "fa-clock"; break;
                                case SupportRequestStatus.InProgress:
                                    statusClass = "info text-dark"; statusIcon = "fa-sync-alt"; break;
                                case SupportRequestStatus.Approved:
                                    statusClass = "primary"; statusIcon = "fa-thumbs-up"; break;
                                case SupportRequestStatus.Done:
                                    statusClass = "success"; statusIcon = "fa-check-circle"; break;
                                case SupportRequestStatus.Rejected:
                                    statusClass = "danger"; statusIcon = "fa-times-circle"; break;
                            }

                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.RequesterName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Department)</td>
                                <td>@Html.DisplayFor(modelItem => item.RequestType)</td>
                                <td>@Html.DisplayFor(modelItem => item.Urgency)</td>
                                <td>
                                    <span class="badge bg-@statusClass rounded-pill px-2 py-1 d-inline-flex align-items-center">
                                        <i class="fas @statusIcon me-1"></i>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </span>
                                </td>
                                <td>
                                    @if (item.CurrentApprover != null && item.CurrentApprover.User != null)
                                    {
                                        @item.CurrentApprover.User.FullName
                                    }
                                    else
                                    {
                                        <text>-</text>
                                    }
                                </td>
                                <td>@item.CreatedAt.ToLocalTime().ToString("g")</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip" title="รายละเอียด">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (item.Status == SupportRequestStatus.Pending)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary" data-bs-toggle="tooltip" title="แก้ไข">
                                                <i class="fas fa-pencil-alt"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip" title="ลบ">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        });
    </script>
}
