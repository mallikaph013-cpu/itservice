@model myapp.ViewModels.WorkQueueViewModel
@using myapp.Models

@{
    ViewData["Title"] = "รายการแจ้งซ่อมที่ต้องดำเนินการ";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="mb-3">
    <form asp-action="WorkQueue" method="get" class="d-flex flex-wrap gap-2">
        <div class="flex-grow-1">
            <label for="selectedStatus" class="form-label visually-hidden">สถานะ</label>
            <select name="selectedStatus" asp-for="SelectedStatus" asp-items="Model.StatusOptions" class="form-select">
                <option value="">-- ทุกสถานะ --</option>
            </select>
        </div>
        <div class="flex-grow-1">
            <label for="searchString" class="form-label visually-hidden">ค้นหา</label>
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="ค้นหา..." />
        </div>
        <div class="d-flex align-items-end">
            <button type="submit" class="btn btn-primary">ค้นหา</button>
            <a asp-action="WorkQueue" class="btn btn-outline-secondary ms-2">ล้าง</a>
        </div>
    </form>
</div>

@if (Model.SupportRequests != null && Model.SupportRequests.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.SupportRequests!.First().RequesterName)</th>
                    <th>@Html.DisplayNameFor(model => model.SupportRequests!.First().Department)</th>
                    <th>@Html.DisplayNameFor(model => model.SupportRequests!.First().RequestType)</th>
                    <th>@Html.DisplayNameFor(model => model.SupportRequests!.First().Urgency)</th>
                    <th>@Html.DisplayNameFor(model => model.SupportRequests!.First().Status)</th>
                    <th>@Html.DisplayNameFor(model => model.SupportRequests!.First().CreatedAt)</th>
                    <th>ผู้รับผิดชอบ</th>
                    <th style="width: 280px;">ดำเนินการ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.SupportRequests)
                {
                    var bangkokTime = item.CreatedAt.AddHours(7);
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.RequesterName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Department)</td>
                        <td>@Html.DisplayFor(modelItem => item.RequestType)</td>
                        <td>@Html.DisplayFor(modelItem => item.Urgency)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>@bangkokTime.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@(item.ResponsibleUser?.FullName ?? "-")</td>
                        <td>
                            <div class="d-flex justify-content-end gap-1">
                                @if (item.Status == SupportRequestStatus.Approved && Model.AssignableUsers != null)
                                {
                                    <form asp-controller="ITSupport" asp-action="AssignResponsibleUser" method="post" class="d-flex gap-1 assign-form">
                                        <input type="hidden" name="supportRequestId" value="@item.Id" />
                                        <select name="userId" class="form-select form-select-sm" style="width: 150px;">
                                            <option value="">-- มอบหมายให้ --</option>
                                            @foreach (var user in Model.AssignableUsers)
                                            {
                                                <option value="@user.Id">@user.FullName</option>
                                            }
                                        </select>
                                        <button type="submit" class="btn btn-sm btn-primary">มอบหมาย</button>
                                    </form>
                                }
                                @if (item.ResponsibleUserId != null)
                                {
                                    <form asp-controller="ITSupport" asp-action="CancelAssignment" method="post" class="cancel-form">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="button" class="btn btn-sm btn-warning cancel-btn">ยกเลิก</button>
                                    </form>
                                }
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">รายละเอียด</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center mt-4">
        <p>ไม่พบรายการตามที่ค้นหา</p>
    </div>
}

<!-- Confirmation Modals -->
<div class="modal fade" id="assignConfirmationModal" tabindex="-1" aria-labelledby="assignConfirmationModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="assignConfirmationModalLabel">ยืนยันการมอบหมาย</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="assignConfirmationBody">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ไม่</button>
        <button type="button" class="btn btn-primary" id="confirmAssignBtn">ใช่, มอบหมาย</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="cancelConfirmationModal" tabindex="-1" aria-labelledby="cancelConfirmationModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="cancelConfirmationModalLabel">ยืนยันการยกเลิก</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        คุณต้องการยกเลิกการมอบหมายงานนี้ใช่หรือไม่?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ไม่</button>
        <button type="button" class="btn btn-danger" id="confirmCancelBtn">ใช่, ยกเลิกการมอบหมาย</button>
      </div>
    </div>
  </div>
</div>

<!-- Info Modal -->
<div class="modal fade" id="infoModal" tabindex="-1" aria-labelledby="infoModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" id="infoModalHeader">
        <h5 class="modal-title" id="infoModalLabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="infoModalBody">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">ตกลง</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script>
    $(function() {
        let formToSubmit = null;
        let isSuccessOperation = false;

        // --- Modal & AJAX Logic ---
        function showInfoModal(title, message, isSuccess) {
            isSuccessOperation = isSuccess;
            $('#infoModalLabel').text(title);
            $('#infoModalBody').text(message);
            
            var modalHeader = $('#infoModalHeader');
            modalHeader.removeClass('bg-success bg-danger text-white');
            var modalCloseButton = modalHeader.find('.btn-close');

            if (isSuccess) {
                modalHeader.addClass('bg-success text-white');
                modalCloseButton.addClass('btn-close-white');
            } else {
                modalHeader.addClass('bg-danger text-white');
                modalCloseButton.addClass('btn-close-white');
            }

            $('#infoModal').modal('show');
        }

        function submitForm(form) {
            var button = form.find('button[type="submit"], button.cancel-btn');
            var originalButtonText = button.text();
            var actionType = form.hasClass('assign-form') ? 'assign' : 'cancel';
            var loadingText = actionType === 'assign' ? 'กำลังบันทึก...' : 'กำลังยกเลิก...';

            button.prop('disabled', true).text(loadingText);

            $.ajax({
                type: 'POST',
                url: form.attr('action'),
                data: form.serialize(),
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response) {
                    if (response.success) {
                        let successMessage = actionType === 'assign' ? 'มอบหมายงานสำเร็จแล้ว' : 'ยกเลิกการมอบหมายสำเร็จแล้ว';
                        showInfoModal('สำเร็จ', successMessage, true);
                    } else {
                        let errorMessage = response.message || (actionType === 'assign' ? 'ไม่สามารถมอบหมายงานได้' : 'ไม่สามารถยกเลิกการมอบหมายได้');
                        showInfoModal('เกิดข้อผิดพลาด', errorMessage, false);
                        button.prop('disabled', false).text(originalButtonText);
                    }
                },
                error: function() {
                    showInfoModal('เกิดข้อผิดพลาด', 'เกิดข้อผิดพลาดในการเชื่อมต่อกับเซิร์ฟเวอร์', false);
                    button.prop('disabled', false).text(originalButtonText);
                }
            });
        }

        // --- Assign Logic ---
        $('.assign-form').on('submit', function(event) {
            event.preventDefault();
            formToSubmit = $(this);
            var userId = formToSubmit.find('select[name="userId"]').val();
            if (!userId) {
                showInfoModal('ข้อมูลไม่ครบถ้วน', 'กรุณาเลือกผู้รับผิดชอบ', false);
                return;
            }
            var selectedUserName = formToSubmit.find('select[name="userId"] option:selected').text();
            $('#assignConfirmationBody').text(`คุณต้องการมอบหมายงานนี้ให้ ${selectedUserName} ใช่หรือไม่?`);
            $('#assignConfirmationModal').modal('show');
        });

        $('#confirmAssignBtn').on('click', function() {
            if (formToSubmit) {
                $('#assignConfirmationModal').modal('hide');
                submitForm(formToSubmit);
            }
        });

        $('#assignConfirmationModal').on('hidden.bs.modal', function () {
             formToSubmit = null;
        });

        // --- Cancel Logic ---
        $('.cancel-btn').on('click', function(event) {
            event.preventDefault();
            formToSubmit = $(this).closest('form');
            $('#cancelConfirmationModal').modal('show');
        });

        $('#confirmCancelBtn').on('click', function() {
            if (formToSubmit) {
                $('#cancelConfirmationModal').modal('hide');
                submitForm(formToSubmit);
            }
        });

        $('#cancelConfirmationModal').on('hidden.bs.modal', function () {
            formToSubmit = null;
        });

        // --- Info Modal Logic ---
        $('#infoModal').on('hidden.bs.modal', function () {
            if (isSuccessOperation) {
                window.location.reload();
            }
        });
    });
    </script>
}
