@model IEnumerable<myapp.Models.SupportRequest>
@using myapp.Models

@{
    ViewData["Title"] = "รายการแจ้งซ่อมที่ต้องดำเนินการ";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.RequesterName)</th>
                <th>@Html.DisplayNameFor(model => model.Department)</th>
                <th>@Html.DisplayNameFor(model => model.RequestType)</th>
                <th>@Html.DisplayNameFor(model => model.Urgency)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>@Html.DisplayNameFor(model => model.CurrentApproverId)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.RequesterName)</td>
                <td>@Html.DisplayFor(modelItem => item.Department)</td>
                <td>@Html.DisplayFor(modelItem => item.RequestType)</td>
                <td>@Html.DisplayFor(modelItem => item.Urgency)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.CurrentApproverId)</td>
                <td>@item.CreatedAt.ToLocalTime().ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                </td>
                <td>
                    <form asp-action="UpdateStatus" asp-route-id="@item.Id" method="post">
                        <div class="input-group">
                            <select name="status" class="form-select" asp-for="@item.Status" asp-items="Html.GetEnumSelectList<SupportRequestStatus>()">
                            </select>
                            <button type="submit" class="btn btn-sm btn-primary">อัปเดต</button>
                        </div>
                    </form>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>