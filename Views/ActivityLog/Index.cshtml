@model IEnumerable<myapp.Models.ActivityLog>

@{
    ViewData["Title"] = "Activity Log";
}

<div class="container mt-4">
    <h1 class="display-4 mb-4">@ViewData["Title"]</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-history me-2"></i>System Activity</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Timestamp</th>
                            <th scope="col">User Name</th>
                            <th scope="col">Action</th>
                            <th scope="col">Details</th>
                            <th scope="col">IP Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>@log.Timestamp.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>@Html.DisplayFor(modelItem => log.UserName)</td>
                                <td>@Html.DisplayFor(modelItem => log.Action)</td>
                                <td>@Html.DisplayFor(modelItem => log.Details)</td>
                                <td>@Html.DisplayFor(modelItem => log.IpAddress)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
